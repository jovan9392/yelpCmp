<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="needs-validation"
                novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title </label>
                    <input class="form-control" type="text" value="<%= campground.title %>" id="title"
                        name="campground[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Location">Location </label>
                    <input class="form-control" type="text" value="<%= campground.location %>" id="location"
                        name="campground[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Price">Price </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" value="<%= campground.price %>" id="price" name="campground[price]"
                            placeholder="0.00" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="custom-file mb-3">
                        <label for="formFileMultiple" class="form-label custom-file-label">Add more images</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                    </div>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function (img, i) { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" id="image-<%= i %>"
                                value="<%= img.filename %>">
                            <label for="image-<%= i %>">Delete</label>
                        </div>

                        <% }) %>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Description">Description</label>
                    <textarea class="form-control" id="description" name="campground[description]" cols="30" rows="4"
                        required><%= campground.description %></textarea><br>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button type="submit" class="btn btn-success btn-lg mb-2">Finish</button>
            </form>
        </div>
    </div>