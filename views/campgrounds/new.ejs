<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title </label>
                    <input class="form-control" type="text" value="" id="title" name="campground[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Location">Location </label>
                    <input class="form-control" type="text" value="" id="location" name="campground[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Price">Price </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" id="price" name="campground[price]" placeholder="0.00" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">

                    <div class="custom-file mb-3">
                        <label for="formFileMultiple" class="form-label custom-file-label">Choose Images</label>
                        <input class="form-control" type="file" id="image" name="image" multiple>
                    </div>
                    <!-- <label class="form-label" for="image">Image URL </label>
                    <input class="form-control" type="text" id="image" name="campground[image]" value="" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div> -->
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Description">Description</label>
                    <textarea class="form-control" id="description" name="campground[description]" cols="30" rows="4"
                        required></textarea><br>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button type="submit" class="btn btn-success">ADD Campground</button>
            </form>
        </div>

    </div>